<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/profile_name"
		style="@style/TextAppearance.MaterialComponents.Headline5"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Дволятик Олег" />

	<TextView
		android:id="@+id/profile_flat_number"
		style="@style/TextAppearance.MaterialComponents.Body2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		app:layout_constraintStart_toStartOf="@+id/profile_name"
		app:layout_constraintTop_toBottomOf="@+id/profile_percent_of_vote"
		tools:text="квартира: 46" />

	<TextView
		android:id="@+id/profile_percent_of_vote"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="@+id/profile_name"
		app:layout_constraintTop_toBottomOf="@+id/profile_flat_area"
		tools:text="Влияние голоса: 2.3%" />

	<TextView
		android:id="@+id/profile_flat_area"
		style="@style/TextAppearance.MaterialComponents.Body2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toStartOf="@+id/profile_name"
		app:layout_constraintTop_toBottomOf="@+id/profile_name"
		tools:text="площадь: 46кв.м." />

	<TextView
		android:id="@+id/profile_address"
		style="@style/TextAppearance.MaterialComponents.Body2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		app:layout_constraintStart_toStartOf="@+id/profile_name"
		app:layout_constraintTop_toBottomOf="@+id/profile_flat_number"
		tools:text="г. Новосибирск, ул. Центральная, д. 2г" />

</androidx.constraintlayout.widget.ConstraintLayout>